{
  "name": "@techsprint/firebase",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./admin": {
      "types": "./dist/admin.d.ts",
      "import": "./dist/admin.mjs",
      "require": "./dist/admin.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/admin.ts src/client.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/admin.ts src/client.ts --format cjs,esm --dts --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@techsprint/types": "workspace:*",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  }
}
