{
  "name": "techsprint-gdg",
  "version": "1.0.0",
  "description": "Civic Issue Reporting and Municipal Accountability Platform for India",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run --parallel --filter './packages/*' dev\" \"pnpm run dev:web\" \"pnpm run dev:api\" \"pnpm run dev:ml\"",
    "dev:web": "pnpm --filter @techsprint/web dev",
    "dev:api": "pnpm --filter @techsprint/api dev",
    "dev:ml": "source .venv/bin/activate && python3 ml/api_server.py",
    "build": "pnpm run --parallel build",
    "build:web": "pnpm --filter @techsprint/web build",
    "build:api": "pnpm --filter @techsprint/api build",
    "lint": "pnpm run --parallel lint",
    "clean": "pnpm run --parallel clean",
    "typecheck": "pnpm run --parallel typecheck"
  },
  "keywords": [
    "civic",
    "municipality",
    "governance",
    "transparency",
    "india"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
